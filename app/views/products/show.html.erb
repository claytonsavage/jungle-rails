<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

  </article>

  <div>
    <ul class="list-group">
    <% @review.reverse_each do |review|%>
    <li class="list-group-item">Rating: <%= review.rating %>, <%= review.description %>
            <% if review.user_id == current_user.id %>
            DELETE 

<%= link_to fa_icon('trash'), [@product, review], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>

            <% end %>
            </li>
    <% end %>
    </ul>
  </div>
<% if current_user %>
<%= form_for [@product, Review.new] do |form| %>

 <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :rating %>
          <%= form.select(:rating, 1..5)%>
        </div>
         <div class="form-group">
          <%= form.label :description %>
          <%= form.text_field :description, class: 'form-control' %>
        </div>
        <%= form.hidden_field(:product_id, :value => @product.id) %>
        <%= form.hidden_field(:user_id, :value => current_user.id) %>
        <%= form.submit 'Create category', class: 'btn btn-primary' %>
  <% end %>
<% end %>

</section>